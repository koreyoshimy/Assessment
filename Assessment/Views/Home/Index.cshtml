@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}
<!-- page content only -->
@section Styles {
<!-- EITHER link a trimmed page CSS file -->
<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<!-- OR keep inline styles (corrected) -->
<style>
    :root {
        --brand-bg: #0f172a;
        --brand-fg: #fff;
        --brand-accent: #2563eb;
        --brand-accent-2: #22c55e;
        --brand-warn: #f59e0b;
        --brand-danger: #ef4444;
        --ink-900: #0b1220;
        --ink-700: #1f2937;
        --ink-500: #4b5563;
        --ink-300: #9ca3af;
        --surface-0: #fff;
        --surface-1: #f8fafc;
        --surface-2: #eef2f7;
        --surface-3: #e5e7eb;
        --radius: 14px;
        --radius-sm: 10px;
        --shadow: 0 8px 24px rgba(2,6,23,.1);
    }

    * {
        box-sizing: border-box
    }

    html {
        scroll-behavior: smooth
    }

    body {
        background: #f7f8fa
    }

    main {
        max-width: 1120px;
        margin: 0 auto;
        padding: 24px
    }

    h1 {
        font-weight: 800;
        letter-spacing: -.02em;
        margin: 0 0 8px
    }

    .lead {
        color: var(--ink-500);
        font-size: 1.05rem;
        margin-bottom: 18px
    }

    section {
        background: var(--surface-0);
        border: 1px solid var(--surface-3);
        border-radius: var(--radius);
        padding: 18px 18px 14px;
        box-shadow: var(--shadow)
    }

        section h2 {
            margin-top: 0
        }

    .row > section {
        margin-bottom: 16px
    }

    .nav.nav-pills {
        background: var(--surface-1);
        border: 1px solid var(--surface-3);
        border-radius: var(--radius);
        padding: 8px;
        gap: 6px
    }

        .nav.nav-pills .nav-link {
            border-radius: calc(var(--radius) - 6px);
            color: var(--ink-700);
            font-weight: 600
        }

            .nav.nav-pills .nav-link:hover {
                background: var(--surface-2)
            }

            .nav.nav-pills .nav-link.active {
                background: var(--brand-accent);
                color: #fff;
                box-shadow: 0 6px 16px rgba(37,99,235,.35)
            }

    .btn {
        border-radius: var(--radius-sm);
        transition: transform .04s ease,box-shadow .2s ease,background-color .2s ease
    }

        .btn:active {
            transform: translateY(1px)
        }

    .btn-outline-primary:hover {
        box-shadow: 0 6px 16px rgba(37,99,235,.25)
    }

    .btn-outline-success:hover {
        box-shadow: 0 6px 16px rgba(34,197,94,.25)
    }

    .btn-outline-warning:hover {
        box-shadow: 0 6px 16px rgba(245,158,11,.25)
    }

    .btn-outline-danger:hover {
        box-shadow: 0 6px 16px rgba(239,68,68,.25)
    }

    .mt-4 {
        margin-top: 1.25rem !important
    }

    .mb-4 {
        margin-bottom: 1.25rem !important
    }
</style>
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href='@Url.Content("~/css/site.css")' />
</head>
<body>
    <main>
        <section class="row mb-4">
            <h1>Freelancer Management Portal</h1>
            <p class="lead">Manage your registered freelancers with ease.</p>
        </section>

        <!-- Core Operations UI -->
        <div class="row">
            <section class="col-md-6">
                <h2>Registered Freelancers</h2>
                <p>View and manage all freelancers in the system.</p>
                <p><a class="btn btn-outline-primary" href="@Url.Action("Manage", "Home")">View List &raquo;</a></p>
            </section>
            <section class="col-md-6">
                <h2>Add or Update Freelancer</h2>
                <p>Create a new freelancer profile or update existing details.</p>
                <p><a class="btn btn-outline-success" href="@Url.Action("Create", "Home")">Add New &raquo;</a></p>
            </section>
        </div>

        <div class="row mt-4">
            <section class="col-md-6">
                <h2>Delete Freelancer</h2>
                <p>Remove a freelancer from the system permanently.</p>
                <p><a class="btn btn-outline-danger" href="@Url.Action("Delete", "Home")">Delete &raquo;</a></p>
            </section>
            <section class="col-md-6">
                <h2>Archive/Unarchive</h2>
                <p>Toggle the archive status of a freelancer.</p>
                <p><a class="btn btn-outline-warning" href="@Url.Action("Archive", "Home")">Manage Archive &raquo;</a></p>
            </section>
        </div>
    </main>
</body>
</html>